{
    "compilerOptions": {
        "outDir": "out",
        "module": "commonjs",
        "target": "es2017",
        "sourceMap": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*",
    ]
}